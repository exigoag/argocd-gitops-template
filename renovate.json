{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    ":semanticCommits"
  ],
  "kubernetes": {
    "managerFilePatterns": [
      "/\\.ya?ml$/"
    ]
  },
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/app\\.yaml$/"
      ],
      "matchStringsStrategy": "combination",
      "datasourceTemplate": "helm",
      "versioningTemplate": "helm",
      "matchStrings": [
        "repoURL:\\s*\"(?<registryUrl>.*)\"",
        "srcChart:\\s*\"(?<depName>.*)\"",
        "srcTargetRevision:\\s*\"(?<currentValue>.*)\""
      ]
    }
  ],
  "packageRules": [
    {
      "matchFileNames": [
        "**/dev-cluster/**"
      ],
      "labels": [
        "env:nonprod"
      ],
      "groupName": "nonprod",
      "automerge": true,
      "minimumReleaseAge": "2 days",
      "prPriority": 20
    },
    {
      "matchFileNames": [
        "**/in-cluster/**",
        "**/prod-cluster/**"
      ],
      "labels": [
        "env:prod"
      ],
      "groupName": "prod",
      "automerge": false,
      "minimumReleaseAge": "7 days",
      "prPriority": 0
    }
  ],
  "dependencyDashboard": true,
  "prConcurrentLimit": 1,
  "prHourlyLimit": 0,
  "separateMajorMinor": true,
  "separateMinorPatch": true,
  "commitMessagePrefix": "chore(deps): "
}
